<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_240sdp"
    android:background="@drawable/custom_button"
    android:layout_marginBottom="14dp">


    <ImageView
        android:id="@+id/img_avatar_information"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_50sdp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar_information" />

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="26dp"
        android:textSize="@dimen/_14sdp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/img_avatar_information"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_date"
        android:layout_width="@dimen/_180sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:textColor="@color/txt_date"
        app:layout_constraintStart_toStartOf="@+id/txt_name"
        app:layout_constraintTop_toBottomOf="@+id/txt_name" />

    <ImageView
        android:id="@+id/img_edit_information"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/txt_name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_edit" />

    <TextView
        android:id="@+id/txt_title_information"
        android:layout_width="@dimen/_238sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="TextView"
        android:textStyle="bold"
        android:textSize="@dimen/_14sdp"
        app:layout_constraintStart_toStartOf="@+id/img_avatar_information"
        app:layout_constraintTop_toBottomOf="@+id/img_avatar_information" />

    <TextView
        android:id="@+id/txt_date_pin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="TextView"
        android:textColor="@color/tab_layout"
        app:layout_constraintBottom_toBottomOf="@+id/img_pin"
        app:layout_constraintStart_toEndOf="@+id/img_pin" />

    <ImageView
        android:id="@+id/img_pin"
        android:layout_width="@dimen/_10sdp"
        android:layout_height="@dimen/_14sdp"
        android:layout_marginTop="14dp"
        app:layout_constraintStart_toStartOf="@+id/txt_title_information"
        app:layout_constraintTop_toBottomOf="@+id/txt_title_information"
        app:srcCompat="@drawable/ic_pin" />

    <TextView
        android:id="@+id/txt_content_information"
        android:layout_width="@dimen/_242sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="TextView"
        app:layout_constraintStart_toStartOf="@+id/img_pin"
        app:layout_constraintTop_toBottomOf="@+id/img_pin" />

    <Button
        android:id="@+id/btn_attachment"
        android:layout_width="@dimen/_238sdp"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:background="@drawable/custom_button_information"
        android:text="Button"
        android:textStyle="bold"
        android:textColor="@color/tab_layout"
        app:layout_constraintStart_toStartOf="@+id/txt_content_information"
        app:layout_constraintTop_toBottomOf="@+id/txt_content_information" />

</androidx.constraintlayout.widget.ConstraintLayout>